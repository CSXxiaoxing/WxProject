/* pages/index/tuangou/tuangou.wxss */
page {
  background-color: #f0f1fa;

  padding-top: 100rpx;
}

.goods_title_head {
    text-align: center;
  z-index: 9999;
  background-color: #fff;
  position: fixed;
  top: 0;
  width: 100%;
  color: #666;
  font-size: 30rpx;
  line-height: 100rpx;
}

.goods_titles_container {
  display: flex;
}

.titles{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  flex: 1;
  display: flex;
}
.titles view{
  width: 25%;
}

.goods_titles_container image {
  width: 20rpx;
  height: 10rpx;
  padding: 45rpx 40rpx 45rpx 40rpx;
  position: relative;
}


.title_more {
  display: flex;
  flex-wrap: wrap;
}

.title_more view {
  width: 20%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}


/*轮播图*/
.goods_container{
 padding: 30rpx 30rpx 0 30rpx;
}
.banner{
  height: 300rpx;
  width: 100%;
}
.banner_item{
  width: 100%;
}
.banner_item image{
  display: block;
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
}
/*商品详情*/
.history_container{
  min-height: 765rpx;
  padding: 30rpx;
}
.history_item{
  margin-bottom: 30rpx;
  padding: 10rpx 30rpx 10rpx 10rpx;
  display: flex;
  border-radius: 10rpx;
  background-color: #fff;
}
.history_item image{
  margin-right: 20rpx;
   border-radius: 10rpx;
  width: 200rpx;
  height: 200rpx;
}
.goods_desc_content{
  width: 422rpx;
  display: flex;
  flex-direction: column;
}
.goods_name{
  line-height: 30rpx;
  height: 60rpx;
   width: 100%;
  color: #4d4d4d;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 23rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_price{
  color: #91a3ff;
  font-size: 36rpx;
}
.goods_price text{
  width: 180rpx;
  margin-left: 19rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
  margin-bottom: 24rpx;
  color: #b3b3b3;
}
.goods_price text::after{
  content: '';
  height: 1px;
  position: absolute;
  top: 50%;
  left: 0;
  background-color: #b3b3b3;
  width: 100%;
}
/*抢购按钮*/
.buy_container{
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #808080;
}
.buy_btn{
  margin-right: 21rpx;
  line-height: 42rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #91a3ff;
  width: 120rpx;
  height: 42rpx;
}