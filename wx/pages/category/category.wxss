/*隐藏滚动条*/
scroll-view::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.titles view {
    flex-shrink: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    -o-text-overflow: ellipsis;
    white-space: nowrap;
    position: relative;
}
.cateD1  .title{
    /* width: 25%; */
    padding: 0 10rpx;
  }
  
