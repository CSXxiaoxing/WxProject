
/* pages/partner/partner.wxss */
page{
  min-height: 100%;
}
.head{
  padding: 30rpx 22rpx;
  font-size: 32rpx;
  color: #1b1d1e;
}
.head-line{
  width: 60rpx;
  height: 3px;
  background-color: #5b6266;
  margin-bottom: 14rpx;
}
.partner-container{
  padding: 0 22rpx;
}
.partner-item{
  padding-bottom: 20rpx;
}
.partner-item-img{
  width: 100%;
  height: 270rpx;
  display: block;
}
.partner-desc{
  height: 72rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px #b6c4cc solid; 
  box-sizing: border-box;
}
.pn-name{
  
  word-break: break-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  flex: 1;
  font-size: 28rpx;
  color: #42474d;
}
.pn-logo{
  margin-left: 20rpx;
  width: 36rpx;
  height: 10rpx;
  display: block;
}