
page{
  background-color: #fafafa;
    font-size: 28rpx;
    padding-bottom: 110rpx;
}
.info-container{
   padding: 20rpx 30rpx; 
  line-height: 48rpx;
  color: #808080;

  margin-top: 20rpx;
  background-color: #fff;
}
.info-container>view{
  display: flex;
}

.goods-msg-container{
  margin-top: 20rpx;
  background-color: #fff;
}
.goods-msg-head{
  display: flex;
  padding: 0 30rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e6e6e6;
  }
.goods-msg-head>view:first-child{
  flex: 1;
  padding-right: 120rpx;
  font-weight: 600;
}
.goods-msg-head>view view{
  max-width: 100rpx;
  padding: 0 5rpx;
  text-align: center;
}
.goods-content{
  display: flex;
  padding: 30rpx;
}
.goods-content >  image{
  display: block;
  width: 190rpx;
  height: 190rpx;
  margin-right: 50rpx;
}
.goods-info{
  flex: 1;
  line-height: 48rpx;
  color: #4c4c4c;
}
.goods-name{
  line-height: 38rpx;
  height: 76rpx;
  margin-bottom: 24rpx;
  font-weight: bold;
}

.norm+view,.norm{
max-width: 450rpx;
}
.info-item{
  display: flex;
  line-height: 68rpx;
  padding: 0 15rpx;
}
.info-item :first-child{
  font-weight: bold;
}
.info-item :last-child{
  flex: 1;
  text-align: right;
}
.bottom{
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  line-height: 100rpx;
  background-color: #fff;
}
/*按钮  */
.btns {
  display: block;
}
.btns view{
  margin-top: 20rpx;
  width: 690rpx;
  line-height: 96rpx;
  text-align: center;
  border-radius: 48rpx;
  font-size: 36rpx;
  color: #4d4d4d;
}
.btns view:last-child{
  border: 1px solid #ccc;
}