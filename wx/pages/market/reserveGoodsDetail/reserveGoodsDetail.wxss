/* pages/index/goods_details/goods_details.wxss */
@import "/wxParse/wxParse.wxss";
page {
  height: 100%;
  background: #f1f0fa;
}

.banner {
  height: 700rpx;
  border-bottom: 1px #e6e6e6 solid;
}

.banner_item {
  height: 700rpx;
}

.banner_item image {
  display: block;
  width: 100%;
  height: 100%;
}

/*商品文字描述*/

.goods-info-head{
  display: flex;

}
.goods-price{
  font-size: 26rpx;
}
.goods-price view{
  max-width: 450rpx;
}
.goods-price :first-child text{
  font-size: 36rpx;

}
.goods-price :last-child{
  line-height: 48rpx;
}

.goods-btns{
  display: flex;
  color: #4d4d4d;
  font-size: 24rpx;
}
.share{
  position: absolute;
  left: 0;
  top: 0;
  /* display: block;*/
    opacity: 0;   
}
.goods-btns > view{
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 105rpx;
}
.goods-btns view:first-child{ 
  box-sizing: border-box;
  border-right: 1px solid #ccc;
}
.goods-btns image{
  width: 29rpx;
  height: 28rpx;
  margin-bottom: 18rpx;
  display: block;
}



.goods-name {
  padding:34rpx 40rpx 0 0;
  color: #4c4c4c;
  font-size: 28rpx;
  font-weight:600;
  line-height: 40rpx;
}

.goods_price_desc {
  font-size: 36rpx;
  color: #91a3ff;
}

.goods_price_desc text {
  margin-left: 20rpx;
  color: #b3b3b3;
  font-size: 30rpx;
  position: relative;
}

.goods_price_desc text::after {
  content: '';
  height: 1px;
  position: absolute;
  top: 50%;
  left: 0;
  background-color: #b3b3b3;
  width: 100%;
}

.col-btns {
  color: #999;
  font-size: 20rpx;
  height: 60rpx;
  box-sizing: border-box;
}

.goods-info {

  background-color: #fff;
  margin: 0 20rpx 10rpx 20rpx;
  padding: 30rpx 0 34rpx 30rpx;
}

.col-btns {
  width: 80rpx;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  border-left: 1px solid #ccc;
}

.col-btns image {
  width: 40rpx;
  height: 40rpx;
  display: block;
}

/*选择商品样式*/

.goods_style_container {
  padding: 30rpx;
  font-size: 24rpx;
  background-color: #fff;
  line-height: 50rpx;
  color: #808080;
}

.style_name {
  max-width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

.goods_styles {
  display: flex;
}

.selecteds_container {
  /*width: 550rpx;*/
  display: flex;
  flex: 1;
  flex-wrap: wrap;
}

.stock {
  margin-left: 30rpx;
}

.selected_item {
  margin-bottom: 20rpx;
  height: 50rpx;
  color: #4d4d4d;
  margin-right: 20rpx;
  border-radius: 5rpx;
  background-color: #e6e6e6;
  padding: 0 26rpx 0 26rpx;
}

.selected {
  color: #fff;
  background-color: #91a3ff;
}

/*数字*/

.border1 {
  text-align: center;
  width: 50rpx;
  height: 50rpx;
  border: 1px #e6e6e6 solid;
}

.border2 {
  color: #1a1a1a;
  font-size: 30rpx;
  text-align: center;
  width: 80rpx;
  height: 50rpx;
  border-top: 1px #e6e6e6 solid;
  border-bottom: 1px #e6e6e6 solid;
}

/*商品文字描述子项*/

.color_blue {
  color: #91a3ff;
}

.desc_item {
    position: relative;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 24rpx;
    color: #4d4d4d;
    min-height: 80rpx;
    margin: 0 20rpx;
    margin-bottom: 10rpx;
}
.desc_item view{
    padding-left: 10rpx;
}

.margin_bottom0 {
  margin-bottom: 0;
}

.margin_bottom20 {
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.desc_name {
  margin-left: 20rpx;
}

.desc_name text {
  font-size: 20rpx;
  color: #4d4d4d;
}

.desc_end_time {
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  position: absolute;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  top: 0;
  right: 50rpx;
}

.desc_item image {
  width: 20rpx;
  height: 11rpx;
  position: absolute;
  right: 30rpx;
  top: 44.5rpx;
}

/*收藏按钮*/

.col_btn {
  position: absolute;
  right: 0;
  padding: 0 20rpx 0 20rpx;
  text-align: center;
}

.col_btn::after{
    content: '';
    background: #4d4d4d;
    width: 1px;
    height: 100%;
    position: inherit;
    top: 0;
    left: 0;
}

/*底部按钮*/

.bottom_btns {
  position: fixed;
  bottom: 0;
  display: flex;
  z-index: 1;
  width: 100%;
  text-align: center;
  height: 98rpx;
  color: #f6f6f6;
  font-size: 30rpx;
}

.compare {
  width: 250rpx;
  background-color: #4d4d4d;
}

.join_in, .addcart {
  flex: 1;
  background-color: #91a3ff;
}

.addcart {
  background-color: #8393e6;
}

/*商品详情*/

.goods_detail_head {
  margin: 0 20rpx;
  background-color: #fff;
  display: flex;
  font-size: 30rpx;
  color: #4d4d4d;
  line-height: 100rpx;
  text-align: center;
}

.detail_imgs {
  display: block;
  width: 100%;
  height: 760rpx;
}

.goods_title {
  flex: 1;
}

.underline {
  position: relative;
}

.underline::after {
  width: 190rpx;
  height: 1px;
  position: absolute;
  left: 30rpx;
  bottom: 0;
  content: '';
  background: #91a3ff;
}

/*规格参数*/

.goods_para_content {
  font-size: 24rpx;
}

.spec {
  flex: 1;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.spec .specs {
  width: 43%;
  display: flex;
  padding: 28rpx 0 28rpx 7%;
  background-color: #f1f0fa;
}

.nowrap {
  white-space: nowrap;
  margin-right: 20rpx;
}

.spec .specs:nth-child(4n-1), .spec .specs:nth-child(4n) {
  background-color: #fff;
}

.spec .specs text {
  padding-left: 0rpx;
}

/*咨询内容*/

.goods_quest {
  padding: 20rpx 30rpx 0 30rpx;
}

.txt_area {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  width: 94%;
  height: 145rpx;
  color: #4d4d4d;
  font-size: 28rpx;
}

.txt_area_holder {
  color: #ccc;
  font-size: 28rpx;
}

.ctr_text_area {
  margin-bottom: 60rpx;
  display: flex;
  width: 100%;
}

.ctr_text_area button {
  width: 47%;
  font-size: 27rpx;
  line-height: 71rpx;
}

.ctr_text_area button:first-child {
  margin-right: 6%;
}

/*咨询记录*/

.chat_item {
  margin-bottom: 30rpx;
  display: flex;
  font-size: 23rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px #e6e6e6 solid;
}

.chat_item image {
  margin-right: 18rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: block;
}

.chat_name {
  color: #808080;
  margin-top: 3rpx;
  margin-bottom: 8rpx;
  width: 400rpx;
}

.chat_msg {
  flex: 1;
}

.chat_content {
  word-wrap: break-word;
  color: #4d4d4d;
  width: 400rpx;
  margin-bottom: 8rpx;
}

.chat_time {
  color: #ccc;
}

.sellerLogo {
  margin-left: 100rpx;
}

.scroll-transition {
  transform: translateY(10%);
  transition: all 0.4s ease;
}

.scr-back {
  transform: translateY(0);
}

.shop_container {
  background-color: #fff;
  margin: 0 20rpx;
}

.shop_head {
  padding-bottom: 10rpx;
  height: 76rpx;
  display: flex;
  align-items: center;
}

.shop-name {
  position: relative;
}

.shop-name image {
  display: block;
  width: 90rpx;
  height: 26rpx;
}

.shop-info-container {
  padding-bottom: 30rpx;
  display: flex;
}

.shop-icon {
  margin: 0 20rpx 0 30rpx;
  width: 90rpx;
  height: 90rpx;
  display: block;
}

.shop-name view {
  position: absolute;
  left: 20rpx;
  top: 0;
  color: #fff;
  line-height: 26rpx;
  font-size: 16rpx;
}

.shop-info-text {
  flex: 1;
  padding-top: 12rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #323232;
}

.shop-info-text view {
  max-width: 330rpx;
}

.shop-btns {
  padding-right: 34rpx;
  text-align: center;
} 

.shop-col-btn {
    display: flex;
    align-items: center;
    justify-content: space-between;
  margin-bottom: 10rpx;
  height: 40rpx;
  width: 140rpx;
  line-height: 40rpx;
  font-size: 18rpx;
  color: #fff;
  box-sizing: border-box;
  padding: 0 9rpx 0 4rpx;
}

.shop-col-btn view, .shop-enter-btn view {
  flex: 1;
}

.shop_container {
  margin-bottom: 10rpx;
}

.shop-enter-btn {
    display: flex;
    align-items: center;
    justify-content: space-between;
    
    height: 40rpx;
    width: 140rpx;
    box-sizing: border-box;
    line-height: 40rpx;
    font-size: 18rpx;
    padding: 0 3rpx 0 4rpx;
}

.shop-enter-icon {
  /* margin: 0 5rpx 0 8rpx; */
  display: block;
  width: 20rpx;
  height: 20rpx;
}

.shop-col-icon {
  display: block;
  /* margin-left: 8rpx; */
  width: 26rpx;
  height: 26rpx;
}

.bottom_btn {
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
line-height: 36rpx;
  width: 376rpx;
  text-align: center;
}
.bottom_btn view{
  
  width: 100%;
}
.btn-items {
  background-color: #fff;
  flex: 1;
  display: flex;
}

.btn-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #585b64;
  font-size: 20rpx;
}

.btn-item image {
  margin-top: 12rpx;
  display: block;
  width: 44rpx;
  height: 44rpx;
}

.info_container {
  background-color: #fff;
  margin: 0 20rpx 10rpx 20rpx;
}

.info_head {
  padding-bottom: 10rpx;
  height: 76rpx;
  display: flex;
  align-items: center;
}

.info-name {
  position: relative;
}

.info-name image {
  display: block;
  width: 110rpx;
  height: 26rpx;
}

.info-name view {
  position: absolute;
  left: 10rpx;
  top: 0;
  color: #fff;
  line-height: 26rpx;
  font-size: 16rpx;
}

.bottom-line {
  padding: 0 20rpx;
  height: 6rpx;
}

.para-container {
  padding: 0 23rpx;
}

.goods_imgs_content {
  padding: 0 20rpx;
}

.para-item {
  padding-left: 11rpx;
  border-bottom: 1px solid #e6e6e6;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #4c4c4c;
}

/**商品咨询*/

.consult-container {
  color: #323232;
  background-color: #fff;
  margin: 0 20rpx 10rpx 20rpx;
}

.consult_head {
  height: 76rpx;
  display: flex;
  align-items: center;
}

.head-name {
  position: relative;
}

.head-name image {
  display: block;
  width: 130rpx;
  height: 26rpx;
}

.head-name view {
  position: absolute;
  left: 20rpx;
  top: 0;
  color: #fff;
  line-height: 26rpx;
  font-size: 16rpx;
}

.consult-contens {
  font-size: 24rpx;
  padding: 0 20rpx;
}

.ask-text {
  width: 24rpx;
  line-height: 24rpx;
  font-size: 18rpx;
  text-align: center;
  border-radius: 2rpx;
  color: #f5f5f5;
}

.cons-item {
  border-bottom: 1px solid #e6e6e6;
  padding-bottom: 23rpx;
  margin-bottom: 23rpx;
}

.consult-contens .cons-item:last-child {
  margin-bottom: 0;
}

.cons-item > view {
  line-height: 38rpx;
  display: flex;
  align-items: center;
}

.ask-text + view {
  padding-left: 12rpx;
  max-width: 350rpx;
}

.answer {
  margin-top: 16rpx;
}

.answer view {
  max-width: 450rpx;
}

.more-consult {
  
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.more-consult view {
  display: inline-block;
  margin-left: 20rpx;
  border-right: 2rpx solid;
  border-bottom: 2rpx solid;
  width: 10rpx;
  height: 10rpx;
  transform: rotate(-45deg);
}
.evaluate-item{
  width: 660rpx;
  height: 235rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-right: 20rpx;
  display: inline-block;
}
.evaluate-head{
  display: flex;
  padding: 30rpx 20rpx 20rpx 20rpx;
  line-height: 70rpx;
}
.evaluate-head image{
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin: 0 20rpx 10rpx 0;
  border-radius: 50%;
}
.evaluate-head view{
  font-size: 28rpx;
  color: #4d4d4d;
  flex: 1;
}
.evaluate-head text{
  font-size: 24rpx;
  color: #999;
}
.eval-text{
  white-space: pre-wrap;
  color: #4d4d4d;
  height: 96rpx;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 48rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}
.eval-images{
  display: flex;
  padding: 0 25rpx 30rpx 25rpx;
}
.eval-images image{
  width: 220rpx;
  height: 160rpx;
  display: block;
}
.eval-images image:nth-child(2){
  margin: 0 20rpx;
}

.text-no-wrap {
    font-size: 25rpx;
    white-space: nowrap;
}