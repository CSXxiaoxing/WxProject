/* pages/tab1/my_indent/add_comment/add_comment.wxss */
page{
  color: #4d4d4d;
}
.add-comment-box {
  width: 690rpx;
  margin: 0 auto;
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 20rpx;
}

.goods_detail_container {
  padding-top: 25rpx;
  display: flex;
  flex-direction: row;
}

.goods_img {
  margin-right: 27rpx;
  width: 180rpx;
  height: 180rpx;
}

.goods_detail_text_container {
  position: relative;
  height: 180rpx;
}

.goods_name {
  height: 64rpx;
  line-height: 32rpx;
  overflow: hidden;
  color: fff;
  font-size: 28rpx;
  width: 402rpx;
}

.goods_msg_container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 470rpx;
  position: absolute;
  bottom: 0;
}

.buy-time {
  font-size: 26rpx;
}

.red_text_style {
  color: #91a3ff;
  font-size: 24rpx;
}

.btn_view {
  display: flex;
  flex-direction: row;
}

.textmargin {
  margin-right: 40rpx;
}

/** 星星评价**/

.comment-star {
  width: 610rpx;
  padding: 40rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  background-color: #efefef;
  border-radius: 10px;
  position: relative;
}

.comment-star text {
  white-space: nowrap;
}

.tips {
  width: 28rpx;
  height: 35rpx;
  transform: skew(10deg, 10deg) rotate(45deg);
  background-color: #efefef;
  position: absolute;
  right: 40rpx;
  top: -14rpx;
}

.star-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 36rpx;
}

.star, .service {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.service text {
  margin-right: 30rpx;
  padding: 4rpx 12rpx;
  background-color: #fff;
  border: 1px #ddd solid;
  border-radius: 10rpx;
  font-size:24rpx; 
}
.service .on{
  color:#91a3ff;
  border-color: #91a3ff;
}
.star .numBox {
  background-color: #fff;
  width: 60rpx;
  border: 1px #ddd solid;
  border-radius: 10rpx;
  text-align: center;
}

/** 留言区 **/

.message-box {
  display: flex;
  align-items: flex-start;
}

.messageContent {
  width: 450rpx;
  height: 169rpx;
  margin: 0 0 20rpx 20rpx;
  border: 1px #ddd solid;
  border-radius: 10rpx;
  padding: 5rpx;
  background-color: #fff;
}

.messageSubmit {
  width: 450rpx;
  height: 60rpx;
  margin: 0 0 0 20rpx;
  background-color: #91a3ff;
  color: #fff;
  font-size: 24rpx;
}
