/* pages/test_eval/test_eval.wxss */

page {
  background-color: #f3f3f3;
  padding-top: 135rpx;
}

.eval-head {
  z-index: 2;
  background-color: #fff;
  border-top: 1px solid #e6e6e6;
  display: flex;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 120rpx;
}

.title-line {
  height: 60rpx;
  width: 1px;
  background-color: #e6e6e6;
}

.eval-title {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #4d4d4d;
  line-height: 120rpx;
}

.eval-item {
    z-index: 1;
  display: flex;
  padding: 30rpx;
  background-color: #fff;
}

.eval-item image {
  width: 180rpx;
  height: 180rpx;
  display: block;
}

.eval-item>view {
  flex: 1;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #4d4d4d;
  position: relative;
  line-height: 43rpx;
}

.eval-btn {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 160rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 48rpx;
  border: 1px solid #ff004e;
  color: #ff004e;
  border-radius: 4rpx;
}
