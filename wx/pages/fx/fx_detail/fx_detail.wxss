page{
  height: 100%;
  width: 100%;
}
.box {
    display: flex;
    flex-direction: column;
    height: 100%;
}
.header {
    width: 100%;
    padding-left: 40rpx;
    height: 140rpx;
    box-sizing: border-box;
    background-color: #ffffff;
    box-shadow: inset 0px -1px 0px 0px #cccccc;
    display: flex;
}
.header-l {
    flex: 1;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.head-btn{
	height: 60rpx;
	background-color: rgba(255, 255, 255, 0);
	border-radius: 6rpx;
    border: solid 1px #cccccc;
    line-height: 60rpx;
    padding: 0 32rpx;
}
.blue {
    color: #228af2;
    border-color: #228af2;
}
.head-date {
    width: 140rpx;
    position: relative;
}
.head-date image {
    width: 59rpx;
    height: 56rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.date {
    height: 140rpx;
    width: 140rpx;
    background: #ccc;
}

/* 时间 */
.header-r {
    flex: 1;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.header-r .r-date {
    width: 260rpx;
	height: 80rpx;
	background-color: #ffffff;
	box-shadow: inset 0px -1px 0px 0px #cccccc;
    line-height: 80rpx;
    text-align: center;
    color: #808080;
}
.r-date.r-blue {
    color: #228af2;
    box-shadow: inset 0px -1px 0px 0px #228af2;
}
.header-r .zhi {
    font-size: 28rpx;
	color: #333333;
}



.axt,.axt-user {
    width: 100%;
	height: 80rpx;
    box-shadow: inset 0px 1px 0px 0px	#cccccc;
    
    display: flex;
    justify-content: space-around;
    align-items: center;
    text-align: center;
    overflow: hidden;
}
.axt view {
    flex: 1;
    height: 100%;
    line-height: 80rpx;
    background-color: #fafafa;
	box-shadow: inset 0px -1px 0px 0px 
		#cccccc;
}
.axt view:nth-of-type(3){
    width: 100%;
    z-index: 2;
    background-color: #ffffff;
	box-shadow: inset 0px 1px 0px 0px 
		#cccccc;
}

.axt-user {
    height: 140rpx;
    box-shadow: none;
    position: relative;
}
.axt-user:nth-of-type(2n) {
    background-color: #eeeeee;
}
.axt-user view {
    flex: 1;
	font-family: PingFang-SC-Bold;
	font-size: 30rpx;
    color: #393939;
    margin: 0 5rpx;
    box-sizing: border-box;
}
.axt-user view:nth-of-type(1){
    position: absolute;
    top: 29rpx;
    left: 41rpx;
    color: #4d4d4d;
    font-size: 34rpx;
    line-height: 34rpx;
}
.axt-user view:nth-of-type(2) {
    position: absolute;
    bottom: 29rpx;
    left: 41rpx;
    color: #999999;
    font-size: 24rpx;
    line-height: 24rpx;
}
.axt-user view:nth-of-type(3) {
    position: absolute;
    top: 32rpx;
    right: 42rpx;
    font-size: 34rpx;
    line-height: 34rpx;
	color: #228af2;
}


.conten {
    position: relative;
    flex: 1;
}
.mask {
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.3);
    position: absolute;
    left: 0;
    top: 0;
}