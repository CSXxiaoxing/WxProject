/* pages/my/my_indent/my_indent.wxss */

page{
  padding-top: 82rpx;
  background-color: #f0f1fa;
  min-height: 1225rpx;
}
.title_container {
  background-color: #fff;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 9999;
  line-height: 82rpx;
  display: flex;
    font-size: 26rpx;
  text-align: center;
  color: #adadad;
}

.title {
  box-sizing: border-box;
  padding: 0 15rpx;
  flex: 1;
}
.test{
  width:auto;
}


.text_select {
  font-size: 30rpx;
  color: #91a3ff;
  position: relative;
  
  border-bottom: 1px #91a3ff solid;
}

.indent_head {
  position: relative;
  display: flex;
  line-height: 140rpx;
  font-size: 28rpx;
  align-items: center;
  border-bottom: 1px #e6e6e6 solid;
}
.indent_item{
  background-color: #fff;
  margin-top: 20rpx;
}
.indent_state {
  margin-left: 29rpx;
}

.indent_state text {
  color: #91a3ff;
}

.indent_total {
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 120rpx;
}

.pay_btn {
  position: absolute;
  right: 30rpx;
  top: 40rpx;
  background-color:#91a3ff;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  width: 140rpx;
  height: 60rpx;
}

/*订单货物详情*/

.indent_goods_child{
  padding: 30rpx;
  display: flex;
  position: relative;
}
.indent_goods_child::after{
  position: absolute;
  left:15%;
  height: 1px;
  width: 70%;
  content: '';
  background-color: #efefef;
  bottom: 0;
}
.indent_goods_container image {
  display: block;
  width: 200rpx;
  height: 200rpx;
}

.goods_desc_content {
  width: 422rpx;
    margin-left: 29rpx;
    font-size: 24rpx;
    color: #b3b3b3;
    display: flex;
    flex-direction: column;
}

.goods_name {
  width: 100%;
  color: #4d4d4d;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 27rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.indent-desc{
  color: #4d4d4d;
  padding-left: 20rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}