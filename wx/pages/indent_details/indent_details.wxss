/* pages/my/indent_details/indent_details.wxss */

page {
  background-color: #f0f1fa;
  padding-bottom: 300rpx;
}

.indent_msg {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #808080;
}

.indent_state {
  margin-bottom: 18rpx;
}

.indent_state text {
  color: #91a3ff;
}

.indent_id {
  margin-bottom: 20rpx;
}

.indent_time {
  margin-bottom: 29rpx;
}

.pay_btn {
  line-height: 96rpx;
  text-align: center;
  background-color: #91a3ff;
  border-radius: 10rpx;
  font-size: 36rpx;
  margin-bottom: 20rpx;
  color: #fff;
  width: 100%;
}

.logisticBtn {
  font-size: 36rpx;
  line-height: 96rpx;
  width: 100%;
  border: solid 1px #ddd;
  border-radius: 35px;
  text-align:center;

}

.cancel_btn {
  line-height: 96rpx;
  text-align: center;
  background-color: #e6e6e6;
  border-radius: 10rpx;
  font-size: 36rpx;
  color: #808080;
  width: 100%;
}

/*订单金额*/

.indent_goods_item {
  margin-bottom: 20rpx;
  color: #808080;
  line-height: 28rpx;
  font-size: 28rpx;
  background-color: #fff;
  padding: 31rpx 30rpx 10rpx 30rpx;
}

.color_blue {
  color: #91a3ff;
}

.indent_goods_item view {
  word-wrap: break-word;
  margin-bottom: 20rpx;
}

.color_black {
  color: #4d4d4d;
}

/*订单商品图片*/

.indent_goods {
  background-color: #fff;
  color: #4d4d4d;
}

.indent_goods_head {
  border-bottom: 1px #e6e6e6 solid;
  padding-left: 29rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}

.indent_goods_head text:last-child {
  position: absolute;
  color: #b3b3b3;
  right: 30rpx;
}

/*订单货物详情*/

.indent_goods_child {
  position: relative;
  padding: 30rpx;
  display: flex;
}

.indent_goods_container image {
  width: 200rpx;
  height: 200rpx;
}

.eval-btn {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  width: 140rpx;
  line-height: 48rpx;
  border-radius: 4rpx;
  border: 1px solid #b3b3b3;
  font-size: 28rpx;
  text-align: center;
}

.goods_desc_content {
  width: 422rpx;
  margin-left: 29rpx;
  font-size: 24rpx;
  color: #b3b3b3;
  display: flex;
  flex-direction: column;
}

.goods_name {
  width: 100%;
  color: #4d4d4d;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 27rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/*商品价格文字描述*/

.indent_desc {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  padding: 35rpx 0 0 40rpx;
  font-size: 30rpx;
  color: #4d4d4d;
  background-color: #fff;
  line-height: 30rpx;
}

.desc_item {
  position: relative;
  margin-bottom: 35rpx;
}

.price {
  color: #91a3ff;
  position: absolute;
  right: 40rpx;
}

.act_pay {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  line-height: 100rpx;
  background-color: #fff;
  font-size: 30rpx;
  color: #91a3ff;
}
