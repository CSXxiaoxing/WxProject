/* pages/joinUs/joinUs.wxss */

.all {
  padding: 30rpx;
}

.head {
  border-radius: 12rpx 12rpx 0 0;
  font-size: 32rpx;
  color: #fff;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background: -webkit-linear-gradient(90deg, #6e00ef, #a66aec);
}

.head-bg {
  position: absolute;
  left: 0;
  top: 0;
  display: block;
  width: 100%;
  height: 100%;
}

.head-icon {
  margin-right: 20rpx;
  width: 30rpx;
  height: 30rpx;
  display: block;
}

/*输入框  */

.input-container {
  padding: 30rpx 30rpx 40rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0 2px 3px 0 rgba(0,0,0,0.1), 0 2px 3px 0 rgba(0,0,0,0.19);
}

.input-holder {
  font-size: 28rpx;
  color: #a8afb3;
}

.input-item {
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  display: flex;
  font-size: 28rpx;
  color: #1b1d1e;
  line-height: 80rpx;
  box-sizing: border-box;
  border: 1px #aa61ff solid;
}

.msg-input {
  flex: 1;
  padding-right: 20rpx;
  /* font-size: 28rpx; */
  height: 80rpx;
  border-radius: 4rpx;
}

.input-name {
  color: #a8afb3;
  width: 130rpx;
  padding: 0 30rpx 0 22rpx;
}

.ta-holder {
  font-size: 28rpx;
  line-height: 40rpx;
}

.ta-input {
  margin-bottom: 20rpx;
  padding: 20rpx 22rpx;
  width: 100%;
  border-radius: 4rpx;
  border: 1px #5b37ff solid;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #1b1d1e;
  line-height: 40rpx;
}

/*提交按钮  */

.sb-btn {
  box-sizing: border-box;
  border-radius: 12rpx;
  line-height: 80rpx;
  margin-top: 40rpx;
  height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  box-shadow: 1px 3px 1px rgba(110,0,239,0.19);
  background: -webkit-linear-gradient(-90deg,#a66aec,#6e00ef);
}
.click {

}
.click :active{
    background: -webkit-linear-gradient(90deg, #fa2f2f, #fa6c6c);
}
/*加盟须知  */

.condition-container {
  padding: 0 22rpx;
}

.condition-item {
  padding-bottom: 20rpx;
}

.condition-item-img {
  width: 100%;
  height: 270rpx;
  display: block;
}

.condition-desc {
  height: 72rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px #5b37ff solid;
  box-sizing: border-box;
}

.pn-name {
  word-break: break-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  flex: 1;
  font-size: 28rpx;
  color: #42474d;
}

.pn-logo {
  margin-left: 20rpx;
  width: 36rpx;
  height: 10rpx;
  display: block;
}
page{
  width: 100%;
  height: 100%;
  background-color: #f1f0fa;
}
.shops_container{
  padding: 0 30rpx 20rpx 30rpx;
}
.shop_item{
    /*阴影*/
    position: relative;
  box-shadow: 0 4px 6px 0 rgba(0,0,0,0.2), 0 3px 8px 0 rgba(0,0,0,0.19);
  padding: 20rpx 20rpx 0 20rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.shop_item:active{
  box-shadow: 0 6px 12px 0 rgba(160,160,160,0.1), 0 6px 12px 0 rgba(160,160,160,0.1);
}
.shop_image{
  height: 280rpx;
  display: block;
  width: 100%;
  border-radius: 10rpx;
}
.shop_msgs{
  display: flex;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #4d4d4d;
  align-items: center;
}
.shop_icon{
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: block;
  border-radius: 50%;
}
.go_icon{
  position: absolute;
  display: block;
  right: 20rpx;
  width: 40rpx;
  height: 12rpx;
}
/*空数据  */
.nullData{
  background: red;
  width: 100%;
  height: 100%;
}