/* pages/index/inTime/inTime.wxss */
page{
  color: #4d4d4d;
  padding-top: 230rpx;
  background-color: #f0f1fa;
  min-height: 1000rpx;
}
.head{
  width: 100%;
background-color: #fff;
z-index: 2;
  position: fixed;
  top: 0;
  left: 0;
}
scroll-view{
white-space: nowrap;
z-index: 99999;

border-bottom: 1px #e6e6e6 solid;
height:140rpx;
}

.act_item{
  text-align: center;
  display: inline-block;

  height: 140rpx;
  width: 250rpx;
  position: relative;
}
/*横线*/
.act_item::after{
  content: '';
  background-color: #f0f1fa;
  width: 65rpx;
  height: 1px;
  position: absolute;
  left: 0;
  top: 48rpx;
}
.right-line{
  position: relative;
}
.right-line::before{
  content: '';
  background-color: #f0f1fa;
  width: 66rpx;
  height: 1px;
  position: absolute;
  left: 185rpx;
  top: 48rpx;
}
.time{
    background-color: #f0f1fa;

  line-height: 56rpx;
  margin-left: 65rpx;
  border-radius: 35rpx;
  width: 120rpx;
  font-size: 30rpx;

  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.selected{
  background-color: #91a3ff;
  color: #fff;
}
.state{
  font-size: 24rpx;
}
/*倒计时*/
.countTime{
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
}
.countTime text{
  background-color: #000;
  color: #fff;
  font-size: 24rpx;
  margin-right: 5rpx;
  padding:0 5rpx 0 5rpx;
}
/*商品列表*/
.history_container{
  z-index: 0;
  padding: 30rpx 30rpx 0 30rpx;
}
.history_item{
 
  margin-bottom: 30rpx;
  padding: 10rpx 30rpx 10rpx 10rpx;
  display: flex;
  border-radius: 10rpx;
  background-color: #fff;
}
.history_item image{
  display: block;
  margin-right: 20rpx;
   border-radius: 10rpx;
  width: 200rpx;
  height: 200rpx;
}
.goods_desc_content{
  width: 422rpx;
  display: flex;
  flex-direction: column;
}
.goods_name{
  height: 80rpx;
   width: 100%;
   line-height: 40rpx;
  color: #4d4d4d;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 13rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_price{

  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #91a3ff;
  font-size: 30rpx;
}
.goods_price text{
  width: 180rpx;
  margin-left: 19rpx;
  font-size: 24rpx;

  position: relative;
  margin-bottom: 24rpx;
  color: #b3b3b3;
}
.goods_price text::after{
  content: '';
  height: 1px;
  position: absolute;
  top: 50%;
  left: 0;
  background-color: #b3b3b3;
  width: 100%;
}
/*抢购按钮*/
.buy_container{
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #808080;
}
.buy_btn{
  margin-right: 21rpx;
  line-height: 42rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #91a3ff;
  width: 120rpx;
  height: 42rpx;
}
/*灰色按钮*/
.color_gray{
  background-color: #e6e6e6;
color: #4d4d4d
}