/* pages/index/hot_shop/hot_shop.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f1f0fa;
}
.shops_container{
  padding: 40rpx 30rpx 0 30rpx;
}
.shop_item{
    /*阴影*/
    position: relative;
  box-shadow: 0 4px 6px 0 rgba(0,0,0,0.2), 0 3px 8px 0 rgba(0,0,0,0.19);
  padding: 20rpx 20rpx 0 20rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.shop_item:active{
  box-shadow: 0 6px 12px 0 rgba(160,160,160,0.1), 0 6px 12px 0 rgba(160,160,160,0.1);
}
.shop_image{
  height: 280rpx;
  display: block;
  width: 100%;
  border-radius: 10rpx;
}
.shop_msgs{
  display: flex;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #4d4d4d;
  align-items: center;
}
.shop_icon{
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  display: block;
  border-radius: 50%;
}
.go_icon{
  position: absolute;
  display: block;
  right: 20rpx;
  width: 40rpx;
  height: 12rpx;
}
/*空数据  */
.nullData{
  background: red;
  width: 100%;
  height: 100%;
}