/* css技术支持动态效果 */
.shadow {
    text-align: center;
    background: -webkit-gradient(linear, left top, right top, color-stop(0, #4d4d4d), color-stop(0.4, #4d4d4d), color-stop(0.5, #91a3ff), color-stop(0.6, #4d4d4d), color-stop(1, #4d4d4d));  
     -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-animation: animate 10s infinite;
}
@-webkit-keyframes animate {
    from {
      background-position: -180rpx;
    }
    to {
      background-position: 230rpx;
    }
}
@keyframes animate {
    from {
      background-position: -180rpx;
    }
    to {
      background-position: 230rpx;
    }
}


