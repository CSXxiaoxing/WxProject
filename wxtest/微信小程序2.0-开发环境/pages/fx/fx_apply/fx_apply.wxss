/* 蒙层 */
.mark {
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 99999;
}

.mark-child {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.35);
    z-index: 1;
}
.mark-center {
    width: 513rpx;
	height: 340rpx;
	background-color: #ffffff;
    border-radius: 5px;
    position: absolute;
    top: 44%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
}
.mark1 {
    width: 641rpx;
	height: 386rpx;
}
.mark-center image{
    width: 80rpx;
    height: 94rpx;
    position: absolute;
    top: 38rpx;
    left: 50%;
    transform: translateX(-50%);
}
.mark-center .wenzi{
    font-size: 30rpx;
    font-weight: 600;
	line-height: 36rpx;
    color: #282828;
    position: absolute;
    top: 160rpx;
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
}
.wenzi-ms {
    font-size: 28rpx;
    font-weight: 500;
	line-height: 36rpx;
    color: #333333;
    position: absolute;
    bottom: 134rpx;
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
}
.mark1 .wenzi-ms text {
    color: #cc3333;
}
.mark2 .wenzi{
    font-weight: 400;
    font-size: 28rpx;
}
.mark2 .wenzi-ms{
    bottom: 102rpx;
}
.mark3 {
    width: 645rpx;
    height: 1096rpx;
    position: absolute;
    top: 48.5%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.mark3 text {
    display: block;
    width: 575rpx;
    height: 863rpx;
    font-size: 24rpx;
    color: #333;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    overflow-x: hidden;
    overflow-y: auto;
}
.mark-btn {
    height: 84rpx;
	line-height: 84rpx;
    width: 100%;
    text-align: center;
	font-size: 28rpx;
    color: #228af2;
    position: absolute;
    bottom: 0;
    border-top: 1px solid #eeeeee;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.mark-btn view {
    flex: 1;
}

.mark-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #333333;
    position: absolute;
    left: 50%;
    top: 24rpx;
    transform: translateX(-50%);
}
