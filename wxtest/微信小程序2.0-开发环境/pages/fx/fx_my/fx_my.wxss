page{
    height: 100%;
    width: 100%;
    overflow: hidden;
}
.box {
    /* 测试背景 */
    background: #eeeeee;
    display: flex;
    flex-direction: column;
}
.height {
    width: 100%;
	height: 350rpx;
    background-color: #228af2;
    padding: 10rpx 50rpx 0 51rpx;
    box-sizing: border-box;
    position: relative;
}
.fx-bl {
    width: 100%;
    height: 98rpx;
    position: absolute;
    bottom: 0;
    left: 0;
}

.earnings {
    height: 145rpx;
    border-bottom: 1rpx solid rgba(255,255,255,0.2);
    font-weight: normal;
	font-stretch: normal;
    letter-spacing: 0px;
}
.earnings view:nth-of-type(1) {
    font-size: 28rpx;
    color: #ffffff;
}
.earnings view:nth-of-type(2) {
    font-size: 60rpx;
    color: #ffffff;
}
.rule {
    position: absolute;
    right: 50rpx;
    top: 32rpx;
    font-size: 28rpx;
	color: #ffffff;
}
.rule view {
    width: 28rpx;
    height: 28rpx;
    padding: 4rpx;
    font-family: SourceHanSansCN-Medium;
    font-size: 14rpx;
    line-height: 28rpx;
    text-align: center;
    border-radius: 50%;
    border: solid 2rpx #ffffff;
    position: absolute;
    top: 50%;
    left: -13rpx;
    transform: translate(-100%,-50%) scale(0.9,0.9);
}
.money {
    font-size: 28rpx;
    color: #ffffff;
}
.money text{
    margin-top: 20rpx;
    display: block;
}
.money button {
    width: 124rpx;
	height: 50rpx;
    font-size: 28rpx;
    line-height: 49rpx;
	border-radius: 6rpx;
    border: solid 1rpx #b4dcff;
    font-family: PingFang-SC-Regular;
    color: #ffffff;
    background: #228af2;
    position: absolute;
    right: 50rpx;
    top: 150rpx;
}

.my2 {
    flex: 1;
    overflow: hidden;
}
.my2 .my-container {
  position: relative;
  /* margin-bottom: 20rpx; */
  height: 328rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  width: 100%;
}

.my2 .user-bg-img {
  z-index: 99;
  position: absolute;
  top: 0;
  left: 0;
  height: 328rpx;
  width: 100%;
  display: block;
}

.my2 .user-icon-bg {
  -webkit-filter: blur(5px); /* Chrome, Opera */
  -moz-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
  opacity: 0.2 .2;
  z-index: 97;
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  height: 500rpx;
  width: 100%;
}

.my2 .user-icon {
  z-index: 100;
  border: 4rpx #fff solid;
  width: 160rpx;
  height: 160rpx;
  margin: 0 50rpx;
  display: block;
  border-radius: 50%;
}

.my2 .user-info-text {
  width: 300rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  color: #fff;
}

.my2 .selItem {
  background-color: #fff;
  padding: 0 30rpx;
  align-items: center;
  display: flex;
  line-height: 100rpx;
  font-size: 26rpx;
  color: rgb(50, 50, 50);
  border-bottom: 1rpx #f2f2f2 solid;
}
.selItem:nth-of-type(2n-1) {
    margin-bottom: 20rpx;
}

.my2 .selItem-title, .my2 .Img-btn-item {
  flex: 1;
}

.my2 .jump-logo {
  margin-left: 12rpx;
  width: 20rpx;
  height: 20rpx;
  display: block;
}

.my2 .selItem text {
  font-size: 24rpx;
  color: rgb(92, 92, 92);
}

.my2 .Img-btn-container {
    /* margin-bottom: 20rpx; */
    background-color: #fff;
    display: flex;
    font-size: 30rpx;
    color: rgb(50, 50, 50);
    border-bottom:1px rgb(210, 210, 210) solid;
    height: 160rpx;
    margin-bottom: 20rpx;
}

.my2 .Img-btn-item {
    padding: 22rpx 0 22rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    line-height: 52rpx;
}

.Img-btn-item view:nth-of-type(1) {
	font-size: 30rpx;
	color: #2196f3;
}
.Img-btn-item view:nth-of-type(2) {
}

.my2 .icon {
  margin-right: 15rpx;
  width: 40rpx;
  height: 40rpx;
  display: block;
}
.my2 .user-yh {
  width: 35rpx;
  height: 40rpx;
}

.my2 button {
  border: 0;
  text-align: left;
  border-radius: 0;
}
.my2 button::after{
  border: 0;
}


/* 蒙层 */
.mark {
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 99999;
}
.mark-child {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.35);
    z-index: 1;
}
.mark-center {
    width: 513rpx;
	height: 340rpx;
	background-color: #ffffff;
    border-radius: 5px;
    position: absolute;
    top: 44%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
}
.mark-center image{
    width: 80rpx;
    height: 94rpx;
    position: absolute;
    top: 38rpx;
    left: 50%;
    transform: translateX(-50%);
}
.mark-center .wenzi{
	font-size: 28rpx;
	line-height: 36rpx;
    color: #333333;
    position: absolute;
    top: 170rpx;
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
}
.mark-btn {
    height: 84rpx;
	line-height: 84rpx;
    width: 100%;
    text-align: center;
	font-size: 28rpx;
    color: #228af2;
    position: absolute;
    bottom: 0;
    border-top: 1px solid #eeeeee;
}

.qr {
    position: relative;
}
/* 按钮层 */
.butZJ {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    z-index: 1;
    background: rgba(255,255,255,0);
}