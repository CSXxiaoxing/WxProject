@import "/wxParse/wxParse.wxss";
page {
  background: #f1f0fa;
  padding-bottom: 134rpx;
}

.banner {
  height: 700rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px #e6e6e6 solid;
}

.banner_item {
  height: 700rpx;
}

.banner_item image {
  width: 100%;
  height: 100%;
}

/*商品文字描述*/

.goods_text_desc {
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.goods_name {
  height: 60rpx;
  line-height: 30rpx;
  width: 100%;
  color: #1a1a1a;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods_price_desc {
  font-size: 52rpx;
  color: #91a3ff;
}

.goods_price_desc text {
  margin-left: 20rpx;
  color: #b3b3b3;
  font-size: 30rpx;

}
.del{
    position: relative;
}
.del::after {
  content: '';
  height: 1px;
  position: absolute;
  top: 50%;
  left: 0;
  background-color: #b3b3b3;
  width: 100%;
}

/*选择商品样式*/

.goods_style_container {
  padding: 30rpx;
  font-size: 24rpx;
  background-color: #fff;
  line-height: 50rpx;
  color: #808080;
}

.style_name {
    max-width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

.goods_styles {
  display: flex;
}

.selecteds_container {
  /*width: 550rpx;*/
  display: flex;
    flex: 1;
  flex-wrap: wrap;
}

.stock {
  margin-left: 30rpx;
}

.selected_item {
  margin-bottom: 20rpx;
  height: 50rpx;
  color: #4d4d4d;
  margin-right: 20rpx;
  border-radius: 5rpx;
  background-color: #e6e6e6;
  padding: 0 26rpx 0 26rpx;
}
.selected{
  color: #fff;
  background-color: #91a3ff;
}
/*数字*/

.border1 {
  text-align: center;
  width: 50rpx;
  height: 50rpx;
  border: 1px #e6e6e6 solid;
}

.border2 {
  color: #1a1a1a;
  font-size: 30rpx;
  text-align: center;
  width: 80rpx;
  height: 50rpx;
  border-top: 1px #e6e6e6 solid;
  border-bottom: 1px #e6e6e6 solid;
}

/*商品文字描述子项*/

.color_blue {
  color: #91a3ff;
}

.desc_item {
  position: relative;
  background-color: #fff;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  font-size: 30rpx;
  color: #4d4d4d;
  margin-bottom: 20rpx;
}

.margin_bottom0 {
  margin-bottom: 0;
}

.margin_bottom20 {
  margin-bottom: 20rpx;
}

.desc_name {
  margin-left: 30rpx;
}

.desc_end_time {
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  position: absolute;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  top: 0;
  right: 50rpx;
}

.desc_item image {
  width: 20rpx;
  height: 11rpx;
  position: absolute;
  right: 30rpx;
  top: 44.5rpx;
}

/*收藏按钮*/

.col_btn {
  position: absolute;
  right: 0;
  width: 180rpx;
  text-align: center;
}

.col_btn::after{
    content: '';
    background: #4d4d4d;
    width: 1px;
    height: 100%;
    position: inherit;
    top: 0;
    left: 0;
}

/*底部按钮*/

.bottom_btn {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  text-align: center;
  line-height: 114rpx;
  color: #f6f6f6;
  font-size: 30rpx;
}

.compare {
  width: 250rpx;
  background-color: #4d4d4d;
}

.join_in {
  flex: 1;
  background-color: #91a3ff;
}

/*商品详情*/

.goods_detail_head {
  background-color: #fff;
  display: flex;
  font-size: 30rpx;
  color: #4d4d4d;
  line-height: 100rpx;
  text-align: center;
}

.detail_imgs {
  width: 100%;
  height: 760rpx;
}

.goods_title {
  flex: 1;
}

.underline {
  position: relative;
}

.underline::after {
  width: 190rpx;
  height: 1px;
  position: absolute;
  left: 30rpx;
  bottom: 0;
  content: '';
  background: #91a3ff;
}

/*规格参数*/

.goods_para_content {
  font-size: 24rpx;
}

/*.goods_para_content view{
  display: flex;
  flex: 1;
  width: 50%;
}
.para_name{
  
  width: 100rpx;
}
.para_detail{
  display: block;
  line-height: 40rpx;
}*/

.spec {
  flex: 1;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.spec .specs {
  width: 43%;
  display: flex;
  padding: 28rpx 0 28rpx 7%;
  background-color: #f1f0fa;
}

.nowrap {
  white-space: nowrap;
  margin-right: 20rpx;
}

.spec .specs:nth-child(4n-1), .spec .specs:nth-child(4n) {
  background-color: #fff;
}

.spec .specs text {
  padding-left: 0rpx;
}

/*咨询内容*/

.goods_quest {
  padding: 20rpx 30rpx 0 30rpx;
}

.txt_area {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  width: 94%;
  height: 145rpx;
  color: #4d4d4d;
  font-size: 28rpx;
}

.txt_area_holder {
  color: #ccc;
  font-size: 28rpx;
}

.ctr_text_area {
  margin-bottom: 60rpx;
  display: flex;
  width: 100%;
}

.ctr_text_area button {
  width: 47%;
  font-size: 27rpx;
  line-height: 71rpx;
}

.ctr_text_area button:first-child {
  margin-right: 6%;
}

/*咨询记录*/

.chat_item {
  display: flex;
  font-size: 23rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px #e6e6e6 solid;
}

.chat_item image {
  margin-right: 18rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: block;
}

.chat_name {
  color: #808080;
  margin-top: 3rpx;
  margin-bottom: 8rpx;
  width: 550rpx;
}

.chat_content {
  color: #4d4d4d;
  width: 550rpx;
  margin-bottom: 8rpx;
}

.chat_time {
  color: #ccc;
}

/*活动文字*/

.act_container {
  color: #91a3ff;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  padding: 18rpx 0rpx 18rpx 30rpx;
  line-height: 50rpx;
  flex-direction: column;
  background-color: #fff;
}

.act_desc {
  padding: 18rpx 0rpx 18rpx 30rpx;
  line-height: 50rpx;
  background-color: #fff;
  font-size: 30rpx;
  color: #4d4d4d;
}
/*价格描述*/

.price_desc_title {
  line-height: 90rpx;
}

.price_desc_title text {
  color: #91a3ff;
}

.price_item {
  position: relative;
  line-height: 55rpx;
}

.price_item text {
  position: absolute;
  right: 0rpx;
}

.price_desc_container {
  background-color: #fff;
 padding:0 30rpx 30rpx 30rpx;
  color: #4d4d4d;
  font-size: 30rpx;
}
.intergral_text{
  font-size: 35rpx;
  color: #91a3ff;
}
