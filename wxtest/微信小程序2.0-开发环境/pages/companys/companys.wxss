page{
    background: #f2f2f2;
}
.com_container{
  padding: 30rpx 30rpx 0rpx 30rpx;
  font-size: 28rpx;
  text-align: center;
  
}
image{
  width: 100%;
  height: 312rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.company_item:active{
  box-shadow: 0 6px 12px 0 rgba(160,160,160,0.1), 0 6px 12px 0 rgba(160,160,160,0.1);
}
.company_item{
    /*阴影*/
  box-shadow: 0 6px 12px 0 rgba(160,160,160,0.2), 0 6px 12px 0 rgba(160,160,160,0.2);
  padding-bottom: 20rpx;
    background: #fff;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}
.name{
  line-height: 68rpx;
}
.add{
  color: #4d4d4d;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.add::before{
  background: #4d4d4d;
  height: 1px;
  display: block;
  width: 25rpx;
  margin-bottom: 20rpx;
  content:'';
}