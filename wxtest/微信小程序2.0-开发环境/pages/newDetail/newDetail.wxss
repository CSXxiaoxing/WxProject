/* pages/newDetail/newDetail.wxss */
.new-head{
  padding: 18rpx 22rpx 15rpx 22rpx;

}
.new-name{
  font-size: 32rpx;
  color: #1b1d1e;
  line-height: 56rpx;
  font-weight: 600;
}
.new-desc-container{
  line-height: 48rpx;
  font-size: 24rpx;
  color: #a8afb3;
  display: flex;
  align-items: center;
}
.new-desc-container image{
  margin: 0 12rpx 0 28rpx;
  width: 24rpx;
  height: 17rpx;
  display: block;
}
.read-text{
  margin-right: 12rpx;
}
.new-img{
  margin-top: 12rpx;
  width: 100%;
  height: 270rpx;
  display: block;
}
.new-detail-container{
  font-size: 28rpx;
  line-height: 58rpx;
  color: #5b6266;
}
.new-paragrah-item{
  padding-bottom: 50rpx;
}
.paragraph{

   word-break: break-all; 

  text-indent: 2em;
  padding: 15rpx 35rpx 30rpx 35rpx;
  line-height: 58rpx;
}
.passage-img{
  width: 100%;
  display: block;
}
/*点赞按钮  */
.btn-container{
  padding-bottom: 50rpx;
  margin-top: 50rpx;
  flex-direction: column;
  display: flex;
  align-items: center;
}
.sub-btn{
  box-sizing: border-box;

  display: flex;
  align-items: center;
  border-radius: 30rpx;
  height: 60rpx;
  padding: 0 45rpx;
  
  font-size: 30rpx;
}

.btn-icon{

  margin-right: 26rpx;
  width: 40rpx;
  height: 40rpx;
  display: block;
}