/* pages/category/cate_detail/cate_detail.wxss */
page{
  padding-top: 90rpx;
  background-color: #f0f1fa;
  min-height: 1135rpx;
}
.sort_type{
  background-color: #fff;
  text-align: center;
  position: fixed;
  top: 0;
  width: 100%;
  display: flex;
  color: #808080;
  font-size: 28rpx;
  line-height: 90rpx;
}
.sort_type view{
  flex: 1;
}

/*商品列表*/
.goods_container{
  padding-top: 30rpx ;
  display: flex;
  flex-wrap: wrap;
}
.goods_item{
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 330rpx;
}
.goods_item image{
  display: block;
  margin:10rpx 10rpx 0rpx 10rpx;
  width: 310rpx;
  height: 325rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.goods_name{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
  font-size: 24rpx;
  line-height: 64rpx;
}
.goods_price{
  color: #91a3ff;
  font-size: 30rpx;
}
.buy_btn{
  line-height: 42rpx;
  font-size: 24rpx;
  color: #fff;
  width: 120rpx;
  background: #91a3ff;
  border-radius: 21rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}