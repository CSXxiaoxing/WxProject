.mark {
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 99999;
}

.mark-child {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.35);
    z-index: 1;
}
.mark-center {
    width: 513rpx;
	height: 340rpx;
	background-color: #ffffff;
    border-radius: 5px;
    position: absolute;
    top: 44%;
    left: 50%;
