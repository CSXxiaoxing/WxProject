.my2 .my-container {
  position: relative;
  margin-bottom: 20rpx;
  height: 328rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  width: 100%;
}

.my2 .user-bg-img {
  z-index: 99;
  position: absolute;
  top: 0;
  left: 0;
  height: 328rpx;
  width: 100%;
  display: block;
}

.my2 .user-icon-bg {
  -webkit-filter: blur(5px); /* Chrome, Opera */
  -moz-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
  opacity: 0.2 .2;
  z-index: 97;
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  height: 500rpx;
  width: 100%;
}

.my2 .user-icon {
  z-index: 100;
