/* pages/cart/cart.wxss 第二种 */
page{
  height: 100%;
  background-color: #f0f1fa;

}

.cartPage2 .shop_name image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 29rpx 0rpx 30rpx;
}
.cartPage2 .shop_item{
    background-color: #fff;
  margin-bottom: 20rpx;
}
.cartPage2 .shop_name {
  line-height: 90rpx;
  font-size: 28rpx;
  color: #4d4d4d;
  align-items: center;
  display: flex;

  border-bottom: 1px #e6e6e6 solid;
}

.cartPage2 .goods_item {
  width:750rpx;
  padding: 40rpx 0 40rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1px #e6e6e6 solid;
}
.cartPage2 .check-icon{
 padding: 70rpx 30rpx 70rpx 30rpx;
}
.cartPage2 .check-icon image {
  width: 40rpx;
  height: 40rpx;
  display: block;
 
}

.cartPage2 .goods_item image:nth-child(2) {
  display: block;
  border-radius: 10rpx;
  width: 180rpx;
  height: 180rpx;
}

.cartPage2 .goods_desc {
  width: 410rpx;
  height: 180rpx;
  margin-left: 30rpx;
}

.cartPage2 .goods_name {
  height: 60rpx;
  line-height: 30rpx;
  white-space: pre-wrap;

  color: #4d4d4d;
  font-size: 26rpx;
}
.cartPage2 .goods_price{
  display: flex;
  font-size: 30rpx;
  line-height: 58rpx;
  color: #91a3ff;
}
.cartPage2 .goodStyle{
  width: 300rpx;
}
/*删除商品*/
.cartPage2 .control_goods{
  display: flex;
  line-height: 50rpx;
  position: relative;
}
.cartPage2 .border1{
    text-align: center;
  width: 50rpx;
  height: 50rpx;
  border: 1px #e6e6e6 solid;
}
.cartPage2 .border2{
  color: #1a1a1a;

font-size: 30rpx;
  text-align: center;
  width: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 50rpx;
  border-top: 1px #e6e6e6 solid;
  border-bottom: 1px #e6e6e6 solid;
}
.cartPage2 .del_btn{
  padding-left: 50rpx;
  color: #666666;
  font-size: 24rpx;
  position: absolute;
  right: 7rpx;
}
/*底部按钮*/
.cartPage2 .bottom_btns{
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 114rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.cartPage2 .selAll-btn{
  padding: 36rpx 9rpx 36rpx 30rpx;
}
.cartPage2 .selAll-btn image{
  display: block;

  width: 40rpx;
  height: 40rpx;
}
.cartPage2 .price_total{
  width: 215rpx;
  margin-left: 99rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cartPage2 .price_total text{

  color: #91a3ff;
}
.cartPage2 .count_btn{
  color: #f6f6f6;
  text-align: center;
  line-height: 114rpx;
  width: 286rpx;
  height: 114rpx;
  position: absolute;
  right: 0;
  background-color: #91a3ff;
}
/*没有商品的界面*/
.cartPage2 .noGoods{
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;

  color: #7f7f81;
  height: 300rpx;
}
.cartPage2 .noGoods-info{
  margin-top: 60rpx;
  display:  flex;
  align-items: center;
}
.cartPage2 .noGoods-info image{
  margin-right: 25rpx;
  width: 80rpx;
  height: 80rpx;
  display: block;
}
.cartPage2 .noGoods-btns{
  margin-top: 25rpx;
  display: flex;
  font-size: 30rpx;
  line-height: 60rpx;
}
.cartPage2 .noGoods-btn{
  border: 1px solid #000;
  width:186rpx;
  text-align: center;
  
}
.cartPage2 .back_btn{
  margin-top: 79rpx;
  width: 360rpx;
  line-height: 100rpx;
  text-align: center;
  background: #91a3ff;
  color: #fff;
  border-radius: 10rpx;
}
.cartPage2 .re-head{
    color: #2f2f34;
    font-size: 36rpx;
    line-height: 88rpx;
    display: flex;
    flex-direction: column;
    align-items: center;            
}
.cartPage2 .recom-goodsList{
  display: flex;
  flex-wrap: wrap;
}
.cartPage2 .goodsItem{
  background-color: #fff;
  margin-left: 20rpx;
  margin-bottom: 15rpx;
  width: 345rpx;
  line-height: 38rpx;
  font-size: 24rpx;
}
.cartPage2 .goodsItem-name{
  min-height: 76rpx;
  padding: 0 30rpx;
}
.cartPage2 .goodsItem-price{
  color: #eb3941;
  padding: 0 30rpx;
  font-size: 30rpx;
  line-height: 70rpx;
}
.cartPage2 .goodsItem-price text{
  font-size: 24rpx;
}
.cartPage2 .goodsItem-image{
  height: 295rpx;
  width: 295rpx;
  display: block;
  margin: 20rpx 0 13rpx 25rpx;
}


