/* pages/index/intergral_shop/intergral_shop.wxss */
page{
  background-color: #f1f0fa;
  padding-top: 340rpx;
  min-height: 910rpx;
}
.sign_head{
  z-index: 9999;
  background-color:#fff; 
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.sign_container{
  padding: 30rpx;
}
.sign_view{
  position: relative;
  padding-left: 89rpx;
  color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  height: 220rpx;

}
.sign_btn{
  position: absolute;
  right: 90rpx;
  font-size: 28rpx;
  top: 29rpx;
  color: #91a3ea;
}
.sign_btn image{
  width: 162rpx;
  height: 162rpx;
}
.sign_btn text{
  width: 100%;
  line-height: 162rpx;
  text-align: center;
  position: absolute;
  left: 0;
  top: 0;
}
/*标题栏*/
.goods_titles{
  display: flex;
  text-align: center;
  line-height: 60rpx;
  color: #adadad;
  font-size: 28rpx;
}
.selected{
  font-size: 30rpx;
  position: relative;
}
.selected::after{
  content: '';
  background-color: #91a3ff;
  width: 60%;
  left: 20%;
  bottom: 0;
  position: absolute;
  height: 1px;
}
.goods_titles text{
  flex: 1;
}
/*商凭区域*/
.history_container{
  padding: 30rpx 30rpx 0 30rpx;
  min-height: 835rpx;
}
.intergral_text{
  color: #91a3ea;
}
.history_item{
  margin-bottom: 30rpx;
  padding: 10rpx 30rpx 10rpx 10rpx;
  display: flex;
  border-radius: 10rpx;
  background-color: #fff;
}
.history_item image{
  margin-right: 20rpx;
   border-radius: 10rpx;
  width: 200rpx;
  height: 200rpx;
}
.goods_desc_content{
  width: 422rpx;
  display: flex;
  flex-direction: column;
}
.goods_name{
  line-height: 30rpx;
  margin-top: 10rpx;
  height: 60rpx;
   width: 100%;
  color: #4d4d4d;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 23rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_price{
  color: #91a3ff;
  font-size: 36rpx;
}
.del_price,.intergral_text{
  width: 180rpx;
  margin-left: 19rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
  margin-bottom: 24rpx;
  color: #b3b3b3;
}
.del_price::after{
  content: '';
  height: 1px;
  position: absolute;
  top: 50%;
  left: 0;
  background-color: #b3b3b3;
  width: 100%;
}
/*抢购按钮*/
.buy_container{
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #808080;
}
.buy_btn{
  margin-right: 21rpx;
  line-height: 42rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #91a3ff;
  width: 120rpx;
  height: 42rpx;
}