
page{
  padding-bottom: 160rpx;
  display: flex;
}
.msg-container{
  width: 750rpx;
}
.msg-item{
  font-size: 30rpx;
  padding: 10rpx 40rpx;
  color:#4c4c4c;
}
.msg-item view:first-child{
letter-spacing: 2rpx;
  font-weight: 600;
  line-height: 70rpx;
}
.msg-item textarea{
  height: 140rpx;
  width: 610rpx;
  padding: 30rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}
.date-contain{
  display: flex;
    line-height: 88rpx;
}
.date-contain picker{
  width:270rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding-left: 35rpx;
  color: #b3b3b3;
}
.date-contain view{
  flex: 1;
  text-align: center;
}
.msg-item input{
  height: 88rpx;
  padding:0 35rpx;
   line-height: 88rpx; 
  background-color: #f5f5f5;
  border-radius: 10rpx;

}
.holder{
  color: #b3b3b3;
}
.btn {
  width: 100%;
  height: 160rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.btn button{
  width: 690rpx;
  color: #fff;
  font-size: 36rpx;
  border-radius: 50rpx;
}
/*弹窗  */
.reserveMsgDetail {
  display: flex;
  align-items: center;
  flex-direction: column;
  transition: all 0.4s ease;
  position: fixed;
  width: 690rpx;
  height: 1100rpx;
  z-index: 11;
  background-color: #fff;
  left: 30rpx;
  top: 60rpx;
  border-radius: 10rpx;
}
.resMsg-title {
  border-radius: 25rpx;
  box-shadow: 0 1px 3px 0 rgba(160, 160, 160, 0.2), 0 1px 3px 0 rgba(160, 160, 160, 0.2);
  background-color: #fff;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #4c4c4c;
  text-align: center;
  width: 200rpx;
  margin-top: -30rpx;
}
.resMsg-scroll {
  margin: 35rpx 0 0 0;
  font-size: 28rpx;
  color: #4c4c4c;

}
.dark-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  background: rgba(0, 0, 0, 0.5);
  display: none;
}

.resMsg-container{
  padding: 0 50rpx;
}
.goods-container{
  display: flex;
  margin-bottom: 20rpx;
}
.goods-container>image{
  display: block;
  width: 170rpx;
  height: 170rpx;
  margin-right: 20rpx;
}
.goods-container>view{
  flex: 1;
  line-height: 36rpx;
}
.goodsName{
  font-weight: 600;
  line-height: 38rpx;
  height: 76rpx;
  margin-bottom: 15rpx;
}
.goodsNorm{
  line-height: 48rpx;
  max-width: 400rpx;
}
.msg-content{
  padding: 19rpx 0;
  display: flex;
  line-height: 42rpx;
  font-size: 30rpx;
}
.msg-content :first-child{
  max-width: 190rpx;
}
.msg-content :last-child{
  flex: 1;

  font-weight: 600;
}
.btns{
  padding-top: 20rpx;
}
.btns view{
  text-align: center;
  width: 590rpx;
  color: #4d4d4d;
  font-size: 36rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  box-sizing: border-box;
  border:1px solid #b3b3b3 ;
}
.btns :first-child{
  border:0;
  margin-bottom: 20rpx;
}