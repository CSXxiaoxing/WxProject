/* pages/index/brand_goods/brand_goods.wxss */
page{
  padding-top: 340rpx;
  min-height: 910rpx;
}
.head{
  background-color: #fff;
  border-bottom: 1px #e6e6e6 solid;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
}
.brand_logo_view{
  padding: 30rpx;
}
.brand_logo_view image{
  display: block;
  border-radius: 10rpx;
   box-shadow: 0 2px 3px 0 rgba(0,0,0,0.12), 0 3px 4px 0 rgba(0,0,0,0.12);
  height: 220rpx;
  width: 100%;
}
.titles{
  display: flex;
  line-height: 60rpx;
  color: #adadad;
  font-size: 28rpx;
}
.titles text{
  flex: 1;
  text-align: center;
}
/*商品展示*/
/*商品展示*/

.goods_show {
  padding: 30rpx 30rpx 0rpx 30rpx;
  overflow: hidden;
}

.goods_show view {
  width: 200rpx;
  float: left;
}

.goods_show view image {
  display: block;
  width: 100%;
  height: 200rpx;
}

.goods_show view view:nth-child(2) {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  text-align: center;
  font-size: 24rpx;
  color: #4d4d4d;
  line-height: 64rpx;
}

.goods_show view view:last-child {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  text-align: center;
  font-size: 28rpx;
  color: #ea6ba5;
}

.goods_showitem {
  background-color: #fff;
  margin-bottom: 30rpx;
  margin-left: 45rpx;
}

.goods_showitem:nth-child(3n-2) {
  margin-left: 0rpx;
}
