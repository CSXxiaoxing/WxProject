/* pages/tab1/my_indent/add_comment/add_comment.wxss */
page{
  color: #4d4d4d;
}
.add-comment-box {
 
  padding: 0 30rpx 0 30rpx;
  border-bottom:1px solid #f2f2f2;
  padding-bottom:20rpx; 
}

.goods_detail_container {
  padding-top: 46rpx;
  display: flex;
  flex-direction: row;
}

.goods_img {
  margin-right: 27rpx;
  width: 56rpx;
  height: 57rpx;
  border-radius: 50%;
}

.goods_detail_text_container {
  display: block;
  position: relative;
  height: 120rpx;

}

.goods_name {

  height: 70rpx;
  
  line-height: 35rpx;

  color: fff;
  font-size: 28rpx;
  width: 610rpx;
}

.goods_msg_container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 600rpx;
  position: relative;
  
  
}

.buy-time {
  font-size: 26rpx;
}

.red_text_style {
  position: absolute;
  bottom: -60rpx;
  right: 0;
  color: #91a3ff;
  font-size: 24rpx;
}

.btn_view {
  display: flex;
  flex-direction: row;
}

.textmargin {
  margin-right: 40rpx;
}
/*..*/
.com-main {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  border-bottom: 1px solid #f2f2f2;
}

.cMain-nav {
  flex: 1;
  display: flex;
  flex-direction: row;
  margin-right: 20rpx;
}

.cMain-nav image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: skyblue;
}

.cMain-nav .com-user {
  flex: 1;
  display: flex;
  flex-direction: column;
  color: #666;
  padding-left: 20rpx;
  font-size: 20rpx;
  padding-bottom: 20rpx;
}

.askMain {
  /*border-bottom: 1px solid #f2f2f2;*/
  padding-top: 30rpx;
}
.user, .kefu {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0 0 40rpx;
}

.msg {
  color: #444;
  padding: 20rpx 10rpx;
}

.fontB {
  word-wrap: break-word;
  width: 500rpx;
  font-size: 28rpx;
  color: #000;
}

.fontRed {
  font-size: 26rpx;
  word-wrap: break-word;
  width: 500rpx;
}

.fontH {
  font-size: 26rpx;
  color: #666;
}

.com-main .showImg {
  flex: 1;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.com-main .showImg image {
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  overflow: hidden;
}

.askMsg {
  display: flex;
  flex-direction: row;
  padding: 20rpx 40rpx;
  background-color: #f2f2f2;
}

.askMsg > text {
  white-space: nowrap;
}

.textBox {
  background-color: #fff;
  padding: 10rpx;
  margin-bottom: 20rpx;
  height:150rpx;
}

.submit {
  display: flex;
  flex-direction: row;
  margin-right: 30rpx;
}

.submit button {
  flex: 1;
  margin-right: 30rpx;
}

.submit button:last-child {
  color: #cd3333;
}

