/* pages/bindPhone/bindPhone.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-icon{
  margin: 70rpx 0 60rpx 0;
  width: 160rpx;
  height: 160rpx;
  display: block;
  border-radius: 50%;
}
.text{
  font-size: 28rpx;
  line-height: 48rpx;
  color: #4d4d4d;
}
.bind-btn{
  width: 630rpx;
  border-radius: 12rpx;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  margin: 30rpx 0 50rpx 0;
  background-color: #ef3542;
}
.or{
  display: flex;
  align-items: center;
  height: 66rpx;
  color: #999999;
  margin-bottom: 48rpx;
  font-size: 30rpx;
}
.or>text{
  padding: 0 20rpx;
}
.or>view{

  height: 1rpx;
  flex: 1;
  width: 280rpx;
  background-color: #ccc;
}
.iput-item{
  display: flex;
  align-items: center;
  width: 630rpx;
  color: #333333;
  font-size: 30rpx;
  line-height: 80rpx;
  border-bottom:1px solid #999;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.iput-item>input{
  margin:0 80rpx 0 70rpx;
  flex: 1;
  font-size: 30rpx;
}
.qrcode{
  width: 200rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #ccc;
  box-sizing: border-box;
  border-radius: 4rpx;
}