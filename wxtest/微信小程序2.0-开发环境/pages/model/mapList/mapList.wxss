
.map {
    display: flex;
    flex-direction: column;
    border: #000 solid 10rpx;
    /* padding: 20rpx 20rpx 0; */
    box-sizing: border-box;
}
.map  map{
    flex: 1;
    width: 100%;
}

.map .txt { 
    display: inline-block;
    width: 100%;
    background: #fff;
    color: #333;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    /* position: absolute;
    bottom: 0;
    left: 0; */
    padding-left: 20rpx;
    box-sizing: border-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -o-text-overflow: ellipsis;
    white-space: nowrap;
}