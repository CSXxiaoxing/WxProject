/* 海报 */
.share-poster {
    width: 80%;
    margin-top: 40rpx;
    box-shadow: 0px 0rpx 10rpx 0px rgba(255, 255, 255, 0.425);
    box-sizing: border-box;
	
	display:inline-block;
	cursor:pointer;
	font-family:Arial;
	font-weight:bold;
    text-decoration:none;

    position: relative;
    height: 100rpx;
    border-radius: 15rpx;
    overflow: hidden;
    
    border: 6rpx solid #000;
    box-shadow: 0px 0px 20rpx 0px rgba(255, 255, 255, 0.65);
    animation: animate2 8s infinite;
    /* width: 400rpx; */
}
@keyframes animate2 {
    0% {
        border-color:#000;
        box-shadow: 0px 0px 20rpx 0px rgba(255, 255, 255, 0.65);
    }
    49% {
        border-color:#fff;
        box-shadow: 0px 0px 40rpx 0px rgba(0, 0, 0, 0.65);
    }
    100% {
        border-color:#000;
        box-shadow: 0px 0px 20rpx 0px rgba(255, 255, 255, 0.65);
    }
}
.share-poster text{
    display: block;
    background: rgba(255, 255, 255, 0);
    font-size: 38rpx;
    height: 80rpx;
    line-height: 100rpx;
    text-align: center;
	color:#ffffff;
    mix-blend-mode: difference;
    z-index: 3;
    position: absolute;
    left: 0;top: 0;
    height: 100%;
    width: 100%;
}

.share-poster01{
    z-index: 1;
    position: absolute;
    right: 0;top: 0;
    height: 100%;
    width: 100%;
    background: #000;
}
.share-poster02{
    animation: animate3 8s infinite;
    z-index: 2;
    position: absolute;
    left: 0;top: 0;
    height: 100%;
    width: 100%;
    background: #fff;
}
@keyframes animate3 {
    0% {
        width: 100%;
    }
    49% {
        width: 0%;
    }
    100% {
        width: 100%;
    }
}


