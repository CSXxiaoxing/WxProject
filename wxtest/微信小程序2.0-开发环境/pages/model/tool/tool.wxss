/* 授权 */
.impower {
    /* display: none; */
    position: fixed;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 99999999;
    overflow: hidden;
}
.impower .container{
    box-shadow: 0px 0px 10rpx #f3f3ee;
    border-radius: 10rpx;
    background: #fff;
    height: 400rpx;
    width: 580rpx;
    position: absolute;
    left: 50%;
    top: 45%;
    /* padding: 60rpx 52rpx 50rpx; */
    box-sizing: border-box;
    transform: translate(-50%,-50%);
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    /* font-size: 36rpx; */
}
.impower .title{
    color: #1a1a1a;
    font-size: 43rpx;
	line-height: 46rpx;
    color: #333333;
    font-weight: 600;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 60rpx;
}
.impower .desc{
    width: 100%; 
    text-align: center;
    font-size: 32rpx;
    color: #333;
    line-height: 45rpx;
}
.impower .desc image{
    display: none;
}
.impower .btn{
    display: flex;
    position: absolute;
    right: 27rpx;
    bottom: 10rpx;
}
.impower .btn view{
    padding: 40rpx 30rpx;
    font-size: 30rpx;
	line-height: 36rpx;
    border: 0 none;
}
.impower .btn view:nth-of-type(1){
    padding-right: 30rpx;
    color: #999999;
}
.impower .btn view:nth-of-type(2){
    /* color: #009900; */
    width: 100rpx;
    position: relative;
}
.impower .btn view:nth-of-type(2) view{
    color: #009900;
    
    position: absolute;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
}
.impower .btn view:nth-of-type(2) button{
    background: rgba(5, 4, 4, 0);
    position: absolute;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    z-index: 5;
    opacity: 0;
}

