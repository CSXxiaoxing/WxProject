.msg {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    box-sizing: border-box;
}

.msg input, .msg textarea {
    border: #e0e0e0 solid 2rpx;
    border-radius: 8rpx;
    background: #fff;
    width: 100%;
    padding: 0 10rpx;
    box-sizing: border-box;
}
.msg button {
    margin: 10rpx 0 10rpx;
    height: 80rpx;
    border: 2rpx solid #d8dce6;
}

