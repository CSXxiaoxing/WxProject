/* 新 */
input.mess_input {
    height: 80rpx;
}
textarea.mess_input {
    padding: 14rpx 10rpx;
    height: 160rpx;
}

.msg3 .mess_box{
    display:flex;
    border: 2rpx solid #e0e0e0;
    border-radius: 8rpx;
    background: #fff;
    /* align-items: center; */
    justify-content: space-around;
    margin-bottom:20rpx;
    /* padding:10rpx 20rpx; */
    padding: 0;
    height: 84rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    position: relative;
}
.msg3 .mess_box input, .msg3 .mess_box textarea{
    padding-left: 15%;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    width: 100%;
    position: relative;
    left: 0;
    top: 0;
}
.msg3 .mess_box textarea {
    padding-top: 16rpx;
    padding-bottom: 10rpx;
    height: 100%;
}
.msg3 .mess_box:nth-of-type(3){
    height: 124rpx;
    line-height: 28rpx;
}
.msg3 .mess_box:nth-of-type(3) .megText{
    padding-top: 18rpx;
    position: absolute;
    line-height: 28rpx;
    left: 20rpx;
    top: 0;
    transform: translateY(0);
}
.msg3 .megText{
    width: 10%;
    position: absolute;
    transform: translateY(-50%);
    left: 20rpx;
    top: 50%;
    text-align: left;
    font-size: 28rpx;
    line-height: 0;
    padding: 0;
    z-index: 5;
}


